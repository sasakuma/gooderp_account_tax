<?xml version="1.0"?>
<openerp>
	<data>

		<!--国税设置tree-->
        <record id='config_country_tree' model='ir.ui.view'>
			<field name='name'>config.country.tree</field>
			<field name='model'>config.country</field>
			<field name='arch' type='xml'>
				<tree string='国税设置'>
                    <field name='name'/>
                    <field name='password'/>
                    <field name='vpdn_name'/>
                    <field name='vpdn_password'/>
                    <field name='billing_password'/>
				</tree>
			</field>
		</record>

        <!--国税设置form-->
		<record id='config_country_form' model='ir.ui.view'>
			<field name='name'>config.country.form</field>
			<field name='model'>config.country</field>
			<field name='arch' type='xml'>
                <form string="国税设置">
			    	<sheet>
                        <group>
                            <group>
                                <field name='name'/>
                                <field name="vpdn_name"/>
							</group>
                            <group>
                                <field name='password'/>
                                <field name="vpdn_password"/>
							</group>
                            <group>
                                <field name='billing_password'/>
							</group>
                        </group>
                        <notebook>
                            <page string="申报明细行">
                                <field name="line_ids">
                                     <tree string="申报明细行" editable="bottom">
                                         <field name="name"/>
                                         <field name="category_id"/>
                                     </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
			</field>
		</record>

        <!--地税设置tree-->
        <record id='config_province_tree' model='ir.ui.view'>
			<field name='name'>config.province.tree</field>
			<field name='model'>config.province</field>
			<field name='arch' type='xml'>
				<tree string='地税设置'>
                    <field name='name'/>
                    <field name='password'/>
                    <field name='tel'/>
				</tree>
			</field>
		</record>

		<!--地税设置form-->
		<record id='config_province_form' model='ir.ui.view'>
			<field name='name'>config.province.form</field>
			<field name='model'>config.province</field>
			<field name='arch' type='xml'>
                <form string="地税设置">
			    	<sheet>
                        <group>
                            <group>
                                <field name='name'/>
                                <field name="password"/>
							</group>
							<group>
                                <field name="tel"/>
                                <field name="province_url"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="申报明细行">
                                <field name="line_ids">
                                     <tree string="申报明细行" editable="bottom">
                                         <field name="name"/>
                                         <field name="add_url"/>
                                     </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
			</field>
		</record>

	</data>
</openerp>
