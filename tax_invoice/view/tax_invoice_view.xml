<?xml version="1.0"?>
<openerp>
	<data>

		<!--已认证发票tree-->
        <record id='tax_invoice_tree' model='ir.ui.view'>
			<field name='name'>tax.invoice.tree</field>
			<field name='model'>tax.invoice</field>
			<field name='arch' type='xml'>
				<tree string='已认证发票'>
                    <field name='name'/>
                    <field name="tax_amount"/>
                    <field name='state'/>
				</tree>
			</field>
		</record>
		<!--已认证发票from-->
		<record id='tax_invoice_form' model='ir.ui.view'>
			<field name='name'>tax.invoice.form</field>
			<field name='model'>tax.invoice</field>
			<field name='arch' type='xml'>
                <form string="已认证发票">
	                <header>
                        <button name='tax_invoice_money' states="draft" string="匹配" type="object" class="oe_highlight"/>
	                	<button name='tax_invoice_done' states="draft" string="确认" type="object" class="oe_highlight"/>
	                	<button name='tax_invoice_draft' states="done" string="反确认" type="object" />
	                    <field name="state" widget="statusbar" readonly="1"/>
	                </header>
			    	<sheet>
						<group>
							<field name="name"/>
                            <field name="tax_amount"/>
                        </group>
                        <notebook>
                            <page string="明细发票">
                                <field name="line_ids" context="{'order': 1}">
                                     <tree string="明细行" editable="bottom">
                                         <field name="partner_code"/>
										 <field name="partner_id"/>
                                         <field name="invoice_code"/>
                                         <field name="invoice_name"/>
										 <field name="invoice_amount"/>
										 <field name="invoice_tax"/>
										 <field name="invoice_open_date"/>
										 <field name="invoice_confim_date"/>
										 <field name="tax_rate"/>
										 <field name="is_deductible"/>
										 <field name="money_invoice_ids" widget="many2many_tags"
                                                     options="{'no_create':True}" domain="[('tax_invoice_date', '=', False)]"/>
                                         <field name='image' widget='image'
	            						        options='{"preview_image": "image", "width": "100%"}'/>
                                         <field name="img_note"/>
                                         <field name="img_code"/>
                                         <button name='get_img_code' string="取验证码" type="object" />
                                         <button name='to_done' string="登入" type="object" />
                                     </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
			</field>
		</record>

        <!--继承供应商form,添加税号信息-->
        <record id="supplier_tax_number_form_inherit" model="ir.ui.view">
            <field name="name">supplier_tax_number_form_inherit</field>
            <field name="model">partner</field>
            <field name='inherit_id' ref='core.supplier_address_form' />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='code']" position="after">
                    <field name="tax_number" required="1"/>
				</xpath>
            </field>
        </record>

        <!--继承money_invoice,添加认证日期信息-->
        <record id="tax_invoiced_date_form_inherit" model="ir.ui.view">
            <field name="name">tax_invoiced_date_form_inherit</field>
            <field name="model">money.invoice</field>
            <field name='inherit_id' ref='money.money_invoice_tree' />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='bill_number']" position="after">
                    <field name="tax_invoice_date" readonly="1"/>
				</xpath>
            </field>
        </record>

        <!-- 引入excel action -->
        <record id="create_invoice_line_form" model="ir.ui.view">
            <field name="name">create_invoice_line_form</field>
            <field name="model">create.invoice.line.wizard</field>
            <field name="arch" type="xml">
            	<form>
            		<group>
						<field name="excel"/>
                    </group>
                    <footer>
                        <button name="create_invoice_line"  string="引入" type="object" class="oe_highlight"/>
                        或者
                        <button string="取消" class="oe_link" special="cancel"/>
                    </footer>
            	</form>
            </field>
        </record>
        <act_window id="create_invoice_line_action"
            name="引入excel"
            src_model="tax.invoice"
            res_model="create.invoice.line.wizard"
            view_type="form"
            view_mode="form"
            target="new"/>

        <record id="no_deductible_update_form" model="ir.ui.view">
            <field name="name">no.eductible.update.form</field>
            <field name="model">no.deductible.update</field>
            <field name="arch" type="xml">
            	<form>
                    <group>
						<field name="account"/>
                        <field name="password"/>
                    </group>
                    <footer>
                        <button name="no_deductible_update"  string="上传" type="object" class="oe_highlight"/>
                        或者
                        <button string="取消" class="oe_link" special="cancel"/>
                    </footer>
            	</form>
            </field>
        </record>

        <act_window id="no_deductible_update_action"
            name="上传不抵扣发票"
            src_model="tax.invoice"
            res_model="no.deductible.update"
            view_type="form"
            view_mode="form"
            target="new"/>

        <!--进项发票tree-->
        <record id='tax_invoice_line_tree' model='ir.ui.view'>
			<field name='name'>tax.invoice.line.tree</field>
			<field name='model'>tax.invoice.line</field>
			<field name='arch' type='xml'>
				<tree string='进项发票'>
                    <field name='partner_id'/>
                    <field name="invoice_code"/>
                    <field name='invoice_name'/>
                    <field name='invoice_amount'/>
                    <field name='invoice_tax'/>
                    <field name='invoice_open_date'/>
                    <field name="state" readonly="1"/>
				</tree>
			</field>
		</record>

		<!--进项发票from-->
		<record id='tax_invoice_line_form' model='ir.ui.view'>
			<field name='name'>tax.invoice.line.form</field>
			<field name='model'>tax.invoice.line</field>
			<field name='arch' type='xml'>
                <form string="已认证进项发票">
	                <header>
	                	<button name='to_done' type="object" string="同步数据" class="oe_highlight"/>
                        <field name="state" widget="statusbar" readonly="1"/>
	                </header>
			    	<sheet>
						<group>
							<field name='partner_id'/>
                            <field name="invoice_code"/>
                            <field name='invoice_name'/>
                            <field name='invoice_amount'/>
                            <field name='invoice_tax'/>
                            <field name='invoice_open_date'/>
                            <button name='get_img_code' states="draft" string="取验证码" type="object" />
                        </group>
                        <group>
                            <field name='image' widget='image'
	            						options='{"preview_image": "image", "width": "100%"}'/>
                            <field name="img_note"/>
                            <field name="img_code"/>
                        </group>
                        <notebook>
                            <page string="发票明细">
                                <field name="line_ids" context="{'order': 1}">
                                     <tree string="明细行" editable="bottom">
                                         <field name="goods_id"/>
                                         <field name="goods_amount"/>
                                         <field name="goods_tax"/>
                                         <field name="goods_qty"/>
                                     </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
			</field>
		</record>
	</data>
</openerp>
